{
  "git": {
    "tag": false,
    "tagName": "v${version}",
    "commitMessage": "Release v${version} / [no ci]",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": false,
    "publishPath": "./dist"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": "dist/*.json"
    },
    "@release-it/conventional-changelog": {
      "infile": false,
      "whatBump": false,
      "ignoreRecommendedBump": true,
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "✨Features"
          },
          {
            "type": "fix",
            "section": "🐛 Fixes"
          },
          {
            "type": "perf",
            "section": "🚀 Performance"
          }
        ]
      }
    }
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version}."
  }
}
