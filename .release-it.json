{
  "git": {
    "tag": true,
    "tagName": "v${version}",
    "commitMessage": "Release v${version} / [skip ci]",
    "requireUpstream": false,
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "assets": ["dist/*"]
  },
  "npm": {
    "publish": true,
    "publishPath": "./dist"
  },
  "plugins": {
    "@release-it/bumper": {
      "out": "dist/*.json"
    }
  },
  "hooks": {
    "after:release": "echo Successfully released ${name} v${version}."
  }
}
